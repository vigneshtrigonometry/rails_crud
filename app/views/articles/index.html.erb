<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<h2>
  <%= @message %>
</h2>
<%= link_to 'Create New Article', new_article_path %>
<table border="1" style="width:20%;border:1px solid black;text-align: left">
  <tr>
  <th>Title </th>
  <th>Description</th>
  </tr>
<% @articles.each do |article|  %>
    <tr>
    <td><%= article.title %></td>
    <td><%= article.description %> </td>
    <td><%= link_to 'Edit', edit_article_path(article.id) %></td>
    <td><%= link_to "Delete", article, :method => :delete, data: {confirm:"Are you sure?"} %></td>
    </tr>
<%end%>
  </table>